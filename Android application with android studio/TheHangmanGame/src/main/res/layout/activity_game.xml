    <Button
        android:id="@+id/buttonE"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_E"
        app:layout_constraintBottom_toTopOf="@+id/buttonP"
        app:layout_constraintStart_toEndOf="@+id/buttonW" />

    <Button
        android:id="@+id/buttonR"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_R"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintStart_toEndOf="@+id/buttonE" />

    <Button
        android:id="@+id/buttonY"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_Y"
        app:layout_constraintBottom_toTopOf="@+id/buttonS"
        app:layout_constraintStart_toEndOf="@+id/buttonR" />

    <Button
        android:id="@+id/buttonU"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_U"
        app:layout_constraintBottom_toTopOf="@+id/buttonD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/buttonY" />

    <TextView
        android:id="@+id/hiddenWord"
        android:layout_width="385dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="37sp"
        app:layout_constraintBottom_toTopOf="@+id/wordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgToUser"
        app:layout_constraintVertical_bias="0.351" />

    <EditText
        android:id="@+id/wordInput"
        android:layout_width="242dp"
        android:layout_height="46dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="@string/type_guess"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/guessLetterLbl"
        app:layout_constraintEnd_toStartOf="@+id/guessWordButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/button_Quit"
        app:layout_constraintBottom_toTopOf="@+id/msgToUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/guessWordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/button_GuessWord"
        app:layout_constraintBottom_toTopOf="@+id/guessLetterLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hiddenWord"
        app:layout_constraintVertical_bias="0.948" />

    <TextView
        android:id="@+id/guessLetterLbl"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="272dp"
        android:layout_marginEnd="8dp"
        android:text=" or guess a letter:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hiddenWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/msgToUser"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>