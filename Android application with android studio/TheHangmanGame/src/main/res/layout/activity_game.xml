    <Button
        android:id="@+id/buttonK"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_K"
        app:layout_constraintBottom_toTopOf="@+id/buttonT"
        app:layout_constraintStart_toEndOf="@+id/buttonJ" />

    <Button
        android:id="@+id/buttonN"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="144dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_N"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonM"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_M"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/buttonN" />

    <Button
        android:id="@+id/buttonL"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_L"
        app:layout_constraintBottom_toTopOf="@+id/buttonC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/buttonK" />

    <Button
        android:id="@+id/buttonO"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_O"
        app:layout_constraintBottom_toTopOf="@+id/buttonG"
        app:layout_constraintStart_toEndOf="@+id/buttonI" />

    <Button
        android:id="@+id/buttonG"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_G"
        app:layout_constraintBottom_toTopOf="@+id/buttonX"
        app:layout_constraintStart_toEndOf="@+id/buttonF" />

    <Button
        android:id="@+id/buttonP"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_P"
        app:layout_constraintBottom_toTopOf="@+id/buttonH"
        app:layout_constraintStart_toEndOf="@+id/buttonO" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
        android:text="@string/button_A"
        app:layout_constraintBottom_toTopOf="@+id/buttonJ"
        app:layout_constraintStart_toEndOf="@+id/buttonP" />

    <Button
        android:id="@+id/buttonS"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="onGuessLetterClick"
